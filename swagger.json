    "/conceito/turmadisciplina": {
      "get": {
        "tags": ["Conceitos"],
        "summary": "Obter conceitos por turma e disciplina",
        "description": "Busca todos os conceitos de uma turma específica em uma disciplina.",
        "parameters": [
          {
            "in": "body",
            "name": "turma",
            "description": "ID ou nome da turma",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "body",
            "name": "disciplina",
            "description": "ID ou nome da disciplina",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Conceitos retornados com sucesso",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Conceito"
              }
            }
          },
          "400": {
            "description": "ID ou nome da turma e disciplina não fornecidos"
          },
          "404": {
            "description": "Nenhum conceito encontrado para a turma e disciplina especificadas"
          },
          "500": {
            "description": "Erro ao buscar conceitos"
          }
        }
      }
    },
    "/conceito/unidade": {
      "put": {
        "tags": ["Conceitos"],
        "summary": "Atualizar a nota de uma unidade",
        "description": "Atualiza as notas de uma unidade específica (unidade1, unidade2 ou unidade3).",
        "parameters": [
          {
            "in": "body",
            "name": "alunoId",
            "description": "ID do aluno",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "body",
            "name": "disciplinaId",
            "description": "ID da disciplina",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "body",
            "name": "unidade",
            "description": "Unidade (unidade1, unidade2, unidade3)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "body",
            "name": "notas",
            "description": "Notas a serem atualizadas",
            "required": true,
            "schema": {
              "type": "object"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Notas atualizadas com sucesso"
          },
          "400": {
            "description": "ID do aluno, disciplina, unidade ou notas não fornecidos"
          },
          "404": {
            "description": "Conceito não encontrado"
          },
          "500": {
            "description": "Erro ao atualizar conceito"
          }
        }
      }
    },
    "/conceito/anual": {
      "put": {
        "tags": ["Conceitos"],
        "summary": "Atualizar a nota anual",
        "description": "Atualiza a nota de MFA, FT, MFAPN ou resumo para uma disciplina.",
        "parameters": [
          {
            "in": "body",
            "name": "alunoId",
            "description": "ID do aluno",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "body",
            "name": "disciplinaId",
            "description": "ID da disciplina",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "body",
            "name": "tipoNota",
            "description": "Tipo de nota (MFA, FT, MFAPN, resumo)",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "body",
            "name": "valor",
            "description": "Valor da nota",
            "required": true,
            "schema": {
              "type": "number"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Nota atualizada com sucesso"
          },
          "400": {
            "description": "Tipo de nota inválido ou dados ausentes"
          },
          "404": {
            "description": "Conceito não encontrado"
          },
          "500": {
            "description": "Erro ao atualizar conceito"
          }
        }
      }
    }
