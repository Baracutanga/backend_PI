  "info": {
    "title": "API do Projeto Integrador Senac",
    "description": "Esta API tem como objetivo facilitar a criação de avisos para os discentes do Mediotech Senac, assim como o gerenciamento de suas notas por parte do professor.",
    "version": "1.0.0",
    "contact": {
      "email": "rogercaua@outlook.com.br"
    }
  },
  "servers": [
    {
      "url": "http://localhost:8000/api",
      "description": "Servidor local de desenvolvimento"
    }
  ],
  "paths": {
    "paths": {
      "/coordenador": {
        "post": {
          "tags": ["coordenador"],
          "summary": "Cria um novo coordenador",
          "requestBody": {
            "description": "Dados do novo coordenador",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "email": {
                      "type": "string",
                      "example": "coordenador@exemplo.com"
                    },
                    "nome": {
                      "type": "string",
                      "example": "João Silva"
                    },
                    "senha": {
                      "type": "string",
                      "example": "senha123"
                    }
                  },
                  "required": ["email", "nome", "senha"]
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Coordenador criado com sucesso"
            },
            "400": {
              "description": "Erro de validação"
            },
            "500": {
              "description": "Erro no servidor"
            }
          }
        }
      },
      "/coordenador/delete/{id}": {
        "delete": {
          "tags": ["coordenador"],
          "summary": "Deleta um coordenador",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "description": "ID do coordenador a ser deletado",
              "schema": {
                "type": "string"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Coordenador deletado com sucesso"
            },
            "400": {
              "description": "ID não fornecido ou inválido"
            },
            "404": {
              "description": "Coordenador não encontrado"
            },
            "500": {
              "description": "Erro no servidor"
            }
          }
        }
      },
      "/coordenador/update": {
        "put": {
          "tags": ["coordenador"],
          "summary": "Atualiza os dados de um coordenador",
          "requestBody": {
            "description": "ID do coordenador e dados para atualização",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "coordenadorId": {
                      "type": "string",
                      "example": "64f72be69d23b1b1fc7f8e4a"
                    },
                    "nome": {
                      "type": "string",
                      "example": "Novo Nome"
                    },
                    "email": {
                      "type": "string",
                      "example": "novocoordenador@exemplo.com"
                    }
                  },
                  "required": ["coordenadorId"]
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Coordenador atualizado com sucesso"
            },
            "400": {
              "description": "ID inválido ou campos faltando"
            },
            "404": {
              "description": "Coordenador não encontrado"
            },
            "500": {
              "description": "Erro no servidor"
            }
          }
        }
      }
    },

    "/avisos/create": {
      "post": {
        "summary": "Criação de Aviso",
        "description": "Cria um aviso para uma turma e disciplina específicos.",
        "tags": ["Avisos"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": { "type": "string" },
                  "descricao": { "type": "string" },
                  "turma": { "type": "string" },
                  "disciplina": { "type": "string" }
                },
                "required": ["nome", "descricao", "turma", "disciplina"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Aviso criado com sucesso"
          },
          "404": {
            "description": "Professor ou turma ou disciplina não encontrada"
          },
          "500": {
            "description": "Erro ao criar aviso"
          }
        }
      }
    },
    "/avisos": {
      "get": {
        "summary": "Listar Avisos",
        "description": "Retorna todos os avisos criados pelo usuário autenticado.",
        "tags": ["Avisos"],
        "responses": {
          "200": {
            "description": "Avisos encontrados com sucesso"
          },
          "404": {
            "description": "Nenhum aviso encontrado"
          },
          "500": {
            "description": "Erro ao buscar avisos"
          }
        }
      }
    },
