    "/turma/create": {
      "post": {
        "summary": "Create a new turma",
        "tags": ["Turmas"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "nome": {
                    "type": "string",
                    "description": "The name of the turma"
                  },
                  "disciplinas": {
                    "type": "array",
                    "description": "Array of discipline IDs or names",
                    "items": {
                      "type": "string"
                    }
                  },
                  "turno": {
                    "type": "string",
                    "description": "The shift of the turma (e.g., morning, afternoon)"
                  }
                },
                "required": ["nome", "disciplinas", "turno"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Turma created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "turma": {
                      "type": "object",
                      "properties": {
                        "_id": {
                          "type": "string"
                        },
                        "nome": {
                          "type": "string"
                        },
                        "disciplinas": {
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        },
                        "turno": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/turma": {
      "get": {
        "summary": "Get all turmas",
        "tags": ["Turmas"],
        "responses": {
          "200": {
            "description": "A list of turmas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string"
                      },
                      "nome": {
                        "type": "string"
                      },
                      "turno": {
                        "type": "string"
                      },
                      "disciplinas": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "_id": {
                              "type": "string"
                            },
                            "nome": {
                              "type": "string"
                            },
                            "professor": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/turma/delete/{id}": {
      "delete": {
        "summary": "Delete a turma by ID",
        "tags": ["Turmas"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "ID of the turma to delete",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Turma deleted successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Turma not found"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/coordenador/create": {
      "post": {
        "tags": ["Coordenador"],
        "summary": "Criar um coordenador",
        "description": "Cria um novo coordenador.",
        "parameters": [
          {
            "name": "coordenador",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "coordenador@example.com"
                },
                "nome": {
                  "type": "string",
                  "example": "Nome do Coordenador"
                },
                "senha": {
                  "type": "string",
                  "example": "senhaSecreta"
                }
              },
              "required": ["email", "nome", "senha"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Coordenador criado com sucesso!",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Coordenador criado com sucesso!"
                },
                "coordenador": {
                  "type": "object",
                  "properties": {
                    "user": {
                      "type": "string",
                      "example": "Coordenador"
                    },
                    "email": {
                      "type": "string",
                      "example": "coordenador@example.com"
                    },
                    "nome": {
                      "type": "string",
                      "example": "Nome do Coordenador"
                    },
                    "senha": {
                      "type": "string",
                      "example": "senhaSecreta"
                    },
                    "_id": {
                      "type": "string",
                      "example": "60d21b4667d0d8992e610c85"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Erro de validação",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Todos os campos devem ser fornecidos"
                }
              }
            }
          },
          "500": {
            "description": "Erro ao criar coordenador",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Erro ao criar coordenador"
                },
                "error": {
                  "type": "string",
                  "example": "Mensagem de erro específica"
                }
              }
            }
          }
        }
      }
    },
